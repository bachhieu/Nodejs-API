 <div class="main">
        <!-- Form register -->
        <form action="/user/register" method="POST" class="form" id="register__form">
            <!-- heading form -->
            <h3 class="heading">Tạo tài khoản</h3>
            <!-- space line -->
            <div class="spacer"></div>
      
            <div class="form-group">
                <label for="fullname" class="form-label">Tên đầy đủ</label>
                <input id="fullname" name="fullname" rules="required" type="text" placeholder="VD: Bạch Hiếu" class="form-control">
                <!-- notify message -->
                <span class="form-message"></span>
            </div>
      
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" rules="required|email" type="text" placeholder="VD: email@domain.com" class="form-control">
                <!-- notify message -->
                <span class="form-message"></span>
            </div>
      
            <div class="form-group">
                <label for="password" class="form-label">Mật khẩu</label>
                <input id="password" name="password" rules="required" type="password"  class="form-control">
                <!-- notify message -->
                <span class="form-message"></span>
            </div>
      
            <div class="form-group">
                <label for="password_confirmation" class="form-label">Nhập lại mật khẩu</label>
                <input id="password_confirmation" name="password_confirmation" rules="required|password_confirmation"  type="password" class="form-control">
                <!-- notify message -->
                <span class="form-message"></span>
            </div>

