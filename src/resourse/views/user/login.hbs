        <form action="/user/login" method="POST" class="form" id="login__form">
            <!-- heading form -->
            <h3 class="heading">Đăng nhập</h3>

            <!-- space line -->
            <div class="spacer"></div>
      
      
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" rules="required|email" type="text" placeholder="VD: email@domain.com" class="form-control">
                <!-- notify message -->
                <span class="form-message"></span>
            </div>
      
            <div class="form-group">
                <label for="password" class="form-label">Mật khẩu</label>
                <input id="password" name="password" rules="required|password" type="password" placeholder="Nhập mật khẩu" class="form-control">
                <!-- notify message -->
                <span class="form-message"></span>
            </div>
      
            <button class="form-submit">Đăng nhập</button>
        </form>