

<div class="row mt-4 ">
    {{!-- <div class="col-3">
    </div> --}}
        <img class="col-4" src="/{{this.image.data}}" alt="{{this.name}}">
    <div class="col-8">
       
        <div class="body-rating">
            <p class="name-product">{{this.name}}</p>
            <p class="price-product">{{this.price}} VND</p>
            <p class="des-product">{{this.description}}</p>
        </div>
        <div class="row">
            <div class="col-8">
                <p class="rating">Rating: {{this.avgRating}}/10</p>
                <p class="category">categories: {{this.category}}</p>
            </div>
            <div class="col-4">
               <form style="display:inline-block" action="/book/{{this.slug}}/delete?_method=DELETE" method="POST"><button class="btn btn-primary">DELETE</button></form>
               <a href="/book/{{this.slug}}/edit" class="btn btn-primary" > Edit</a>
                
            </div>
        </div>
    </div>
</div>
<hr>
<div class="rating">
      <form method="POST" action="/book/{{this.slug}}"> 
  <div class="form-group">
    <label for="price">Your rating: <input class="form-control"  style="width:50px; display:inline-block" id="price" name="avgRating" ></input>/10</label>
  </div>
  <div class="form-group">
    <label for="description">review</label>
    <textarea class="form-control"  id="description" style="min-height: 100px" name="description" placeholder="your review message" ></textarea>  
  </div>
    <button type="submit" class="">Submit your rating</button>
  </form>
</div>
